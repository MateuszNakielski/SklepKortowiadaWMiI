@using SklepKortowiadaWMiI.Models
@using SklepKortowiadaWMiI.WebModels       
@{ Order order = (Order)HttpContext.Current.Session["order"]; }
@{ Cart cart = (Cart)HttpContext.Current.Session["cart"]; }
<!DOCTYPE HTML>
<html>
<head>
    <title>Sklep RWSS WMiI | Strona główna</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/megamenu.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/flexslider.css" rel='stylesheet' type='text/css' />
       

</head>
<body>
    <script type="text/javascript" src="~/Content/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/megamenu.js"></script>
    <script defer src="~/Content/jquery.flexslider.js"></script>
    <script>$(document).ready(function(){$(".megamenu").megamenu();});</script>
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <script type="text/javascript">
								$(window).load(function(){
								  $('.flexslider').flexslider({
									animation: "slide",
									start: function(slider){
									  $('body').removeClass('loading');
									}
								  });
								});
    </script>
    
    <div class="wrap">
        <div class="container">
            <div class="header_top">
                <div class="col-sm-9 h_menu4">
                    <ul class="megamenu skyblue">
                        <li class="active grid"><a class="color8" href="/">Strona główna</a></li>
                        <li><a class="color6" href="/Category?category=meskie">Koszulki męskie</a></li>
                        <li><a class="color6" href="/Category?category=damskie">Koszulki damskie</a></li>
                        <li><a class="color6" href="/Category?category=gadzet">Gadżety</a></li>
                        <li><a class="color6" href="Contact">Kontakt</a></li>
                    </ul>
                </div>
                <div class="col-sm-3 header-top-right">
                    <div class="drop_buttons">

                        <div class="clearfix"></div>
                    </div>
                    <div class="register-info">
                        <ul>
                            <li>
                                @if (Session["order"] == null)
                                {
                                    <a href="/Login/LoginForm">Logowanie</a>
                                    <a href="/Login/NewOrder">Rejestracja</a>

                                }
                                else
                                {
                                    <p>Twój numer indeksu: @order.StudentNumber</p>
                                }
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header_bootm">
                <div class="col-sm-4 span_1">
                    <div class="logo">
                        <a href="/"><img src="http://tymson.pl/sklep/images/logo.png" alt="" /></a>
                    </div>
                </div>
                <div class="col-sm-8 row_2">
                    <div class="header_bottom_right">
                        <div class="search">
                            <input type="text" value="Twoj adres e-mail do...?" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Twoj adres e-mail do...?';}">
                            <input type="submit" value="">
                        </div>
                        <ul class="bag">
                            <a href="/Cart"><i class="bag_left"> </i></a>
                            @if (Session["cart"] == null)
                            {
                                <li class="bag_right"><p>0,00 zł</p></li>
                            }else
                            {
                                 <li class="bag_right"><p>@cart.TotalValue() zł</p></li>
                            }
                            <div class="clearfix"> </div>
                        </ul>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            

                    @RenderBody()

                    <div class="footer_top">
                        
                        <!-- start span_of_2 -->
                        <div class="contact_form">
                            <h2>Formularz kontaktowy</h2>
                            <form method="post" action="/Contact/Send">
                                <div class="row_5">
                                    <input name="imie" type="text" class="text" value="imie" onfocus=";" onblur="if (this.value == '') {this.value = 'Imię';}">
                                    <input name="email" type="text" class="text" value="email" onfocus=";" onblur="if (this.value == '') {this.value = 'Email';}" style="margin-left:20px">
                                    <input name="temat" type="text" class="text" value="temat" onfocus=";" onblur="if (this.value == '') {this.value = 'Temat';}" style="margin-left:20px">
                                    <div class="clearfix"></div>
                                </div>
                                <div class="row_6">
                                    <textarea name="content" value="Wiadomość:" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Wiadomość';}">Wiadomość:</textarea>
                                </div>
                                <input name="submit" type="submit" id="submit" value="Wyślij wiadomość">
                                <div class="clearfix"></div>
                            </form>
                        </div>
                        <div class="copy">
                            <p><h6>Projekt i wykonanie: Mateusz Nakielski i Tymoteusz Tyrajski</h6></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

            
                

    
</body>
</html>